<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".ThemPhanCaLamActivity">

    <TextView
        android:id="@+id/txt_cuahang_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cửa hàng"
        android:textColor="#B53471"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ngay_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Thứ hai, 16/12/2019"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_calam_themphancl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Ca sáng: "
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_tgcl_themphancl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="5dp"
            android:text="Ca sáng"
            android:textColor="@color/colorText"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Danh Sách Nhân Viên"
        android:textColor="#5758BB"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lv_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btn_dsnhanvien_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:background="@drawable/gradient"
        android:text="Danh sách nhân viên" />

    <Button
        android:id="@+id/btn_lammoi_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:background="@drawable/gradient"
        android:text="Làm mới" />
</LinearLayout>