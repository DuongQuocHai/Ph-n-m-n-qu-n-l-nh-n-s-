<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemPhanCaLamActivity"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txt_cuahang_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cửa hàng"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_ngay_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thứ hai, 16/12/2019" />

    <TextView
        android:id="@+id/txt_calam_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ca sáng" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Danh Sách Nhân Viên"
        android:textColor="#3D5AFE"
        android:textSize="20sp" />
    <ListView
        android:id="@+id/lv_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_weight="0"
        android:id="@+id/btn_dsnhanvien_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách nhân viên"
        android:background="@drawable/gradient"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_weight="0"
        android:id="@+id/btn_lammoi_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Làm mới"
        android:background="@drawable/gradient"
        android:layout_marginTop="10dp"/>
</LinearLayout>