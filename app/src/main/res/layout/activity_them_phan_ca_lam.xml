<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemPhanCaLamActivity">

    <TextView
        android:id="@+id/txt_cuahang_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cửa hàng" />

    <TextView
        android:id="@+id/txt_ngay_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thứ hai, 16/12/2019" />

    <TextView
        android:id="@+id/txt_calam_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ca sáng" />

    <ListView
        android:id="@+id/lv_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_weight="0"
        android:id="@+id/btn_them_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="thêm" />

    <Button
        android:layout_weight="0"
        android:id="@+id/btn_huy_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hủy" />
    <Button
        android:layout_weight="0"
        android:id="@+id/btn_dsnhanvien_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách nhân viên" />
    <Button
        android:layout_weight="0"
        android:id="@+id/btn_lammoi_themphancl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Làm mới" />
</LinearLayout>