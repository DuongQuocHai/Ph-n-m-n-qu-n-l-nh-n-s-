<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChiTietLichLamActivity">

    <TextView
        android:id="@+id/txt_cuahang_chitietcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cửa hàng" />

    <TextView
        android:id="@+id/txt_ngay_chitietcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thứ 2, chúdalskjdal" />

    <TextView
        android:id="@+id/txt_calam_chitietcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ca Sáng" />

    <ListView
        android:id="@+id/lv_chitietcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_xoa_chitietcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Xoá lịch làm"
        android:textColor="#FF1744" />
</LinearLayout>